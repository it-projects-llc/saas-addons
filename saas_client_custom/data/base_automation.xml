<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="invoice_automate_rule_on_write" model="base.automation">
        <field name="name">Remove base.user_admin from administration</field>
        <field name="model_id" ref="base.model_res_users"/>
        <field name="state">code</field>
        <field name="code" eval="'record._update_admin_groups()'"/>
        <field name="trigger">on_write</field>
        <field name="active" eval="True"/>
        <field name="filter_domain">[('id', '=', user.env.ref('base.user_admin').id)]</field>
    </record>
</odoo>
