<odoo>
    <record id="contract_template_monthly" model="contract.template">
        <field name="name">SaaS Contract (Monthly)</field>
        <field name="contract_type">sale</field>
    </record>

    <record id="contract_template_annually" model="contract.template">
        <field name="name">SaaS Contract (Annually)</field>
        <field name="contract_type">sale</field>
    </record>

    <record id="contract_template_line_monthly" model="contract.template.line">
        <field name="product_id" ref="saas_product.product_users_monthly" />
        <field name="contract_id" ref="contract_template_monthly" />
        <field name="name" eval="obj(ref('saas_product.product_users_monthly')).name" model="product.product" />
        <field name="quantity">1</field>
        <field name="uom_id" ref="uom.product_uom_unit" />
        <field name="price_unit" eval="obj(ref('saas_product.product_users_monthly')).lst_price" model="product.product" />
        <field name="recurring_interval">1</field>
        <field name="recurring_rule_type">monthly</field>
        <field name="recurring_invoicing_type">pre-paid</field>
    </record>

    <record id="contract_template_line_annually" model="contract.template.line">
        <field name="product_id" ref="saas_product.product_users_annually" />
        <field name="contract_id" ref="contract_template_annually" />
        <field name="name" eval="obj(ref('saas_product.product_users_annually')).name" model="product.product" />
        <field name="quantity">1</field>
        <field name="uom_id" ref="uom.product_uom_unit" />
        <field name="price_unit" eval="obj(ref('saas_product.product_users_annually')).lst_price" model="product.product" />
        <field name="recurring_interval">1</field>
        <field name="recurring_rule_type">yearly</field>
        <field name="recurring_invoicing_type">pre-paid</field>
    </record>

</odoo>
