<odoo noupdate="1">
    <record id="saas_remove_long_expired_unpaid_builds" model="ir.cron">
        <field name="name">SaaS: remove long expired unpaid builds</field>
        <field name="model_id" ref="saas.model_saas_db"/>
        <field name="active" eval="True" />
        <field name="user_id" ref="base.user_root" />
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall">1</field>
        <field name="state">code</field>
        <field name="code">model.remove_long_expired_unpaid_builds()</field>
    </record>

